<%= simple_form_for @cartadetalle, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :estado %>
  <%= error_span(@cartadetalle[:estado]) %>
  <%= f.input :cartacab_id %>
  <%= error_span(@cartadetalle[:cartacab_id]) %>
  <%= f.input :menu_id %>
  <%= error_span(@cartadetalle[:menu_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cartadetalles_path, :class => 'btn btn-default' %>
<% end %>
