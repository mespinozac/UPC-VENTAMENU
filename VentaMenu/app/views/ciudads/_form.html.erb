<%= simple_form_for @ciudad, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombre %>
  <%= error_span(@ciudad[:nombre]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ciudads_path, :class => 'btn btn-default' %>
<% end %>
