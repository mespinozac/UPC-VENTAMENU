<%= simple_form_for @food, :html => { :class => 'form-horizontal', multipart: true} do |f| %>
  <%= f.input :name %>
  <%= error_span(@food[:name]) %>
  <%= f.input :description %>
  <%= error_span(@food[:description]) %>
  <%= f.association :type_food %>
  <%= error_span(@food[:typeFood_id]) %>
  
   <% if @food.picture_file_name %>
      <%= image_tag @food.picture.url(:medium)%>
  <% end %>
  
  <%= f.input :picture, as: :file %>
  <%= error_span(@food[:picture]) %>
  
  
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                foods_path, :class => 'btn btn-default' %>
<% end %>
