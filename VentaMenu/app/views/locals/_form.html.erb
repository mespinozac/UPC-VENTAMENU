<%= simple_form_for @local, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@local[:name]) %>
  <%= f.input :address %>
  <%= error_span(@local[:address]) %>
  <%= f.input :telephone %>
  <%= error_span(@local[:telephone]) %>
  <%= f.input :celphone %>
  <%= error_span(@local[:celphone]) %>
  <%= f.input :mail %>
  <%= error_span(@local[:mail]) %>
  <%= f.association :city %>
  <%= error_span(@local[:city_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locals_path, :class => 'btn btn-default' %>
<% end %>
