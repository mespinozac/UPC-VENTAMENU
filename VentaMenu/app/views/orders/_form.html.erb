<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :dateOrder %>
    <%= f.input :status %>
    <%= f.input :price %>
    <%= f.association :customer %>
    <%= f.association :menu %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
