<%= simple_form_for @pedidodetalle, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :estado %>
  <%= error_span(@pedidodetalle[:estado]) %>
  <%= f.input :pedido_id %>
  <%= error_span(@pedidodetalle[:pedido_id]) %>
  <%= f.input :menu_id %>
  <%= error_span(@pedidodetalle[:menu_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pedidodetalles_path, :class => 'btn btn-default' %>
<% end %>
