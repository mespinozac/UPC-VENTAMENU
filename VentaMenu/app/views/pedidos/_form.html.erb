<%= simple_form_for @pedido, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :fecha %>
  <%= error_span(@pedido[:fecha]) %>
  <%= f.input :horapedido %>
  <%= error_span(@pedido[:horapedido]) %>
  <%= f.input :horaentrega %>
  <%= error_span(@pedido[:horaentrega]) %>
  <%= f.input :estado %>
  <%= error_span(@pedido[:estado]) %>
  <%= f.input :montopedido %>
  <%= error_span(@pedido[:montopedido]) %>
  <%= f.input :cartacab_id %>
  <%= error_span(@pedido[:cartacab_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pedidos_path, :class => 'btn btn-default' %>
<% end %>
